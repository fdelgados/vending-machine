{
    "name": "fdelgado/vending-machine",
    "description": "Vending machine",
    "type": "project",
    "require": {
        "php": "^8.3",
        "symfony/console": "6.4",
        "ramsey/uuid": "^4.7",
        "doctrine/dbal": "^4.2",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.4",
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "VendingMachine\\Common\\": "app/common/src/",
            "VendingMachine\\Maintenance\\": "app/maintenance/src/",
            "VendingMachine\\Operation\\": "app/operation/src/",
            "VendingMachine\\Lib\\": "lib/src/"
        },
        "files": [
            "lib/utils.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\VendingMachine\\Common\\": "app/common/tests/",
            "Tests\\VendingMachine\\Maintenance\\": "app/maintenance/tests/",
            "Tests\\VendingMachine\\Operation\\": "app/operation/tests/"
        },
        "files": [
            "lib/testing/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Cisco Delgado",
            "email": "fdelgados@gmail.com"
        }
    ]
}
